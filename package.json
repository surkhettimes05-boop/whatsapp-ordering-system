    "@prisma/client": "^5.22.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-pino-logger": "^7.0.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "geolib": "^3.3.4",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
