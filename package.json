{
  "name": "whatsapp-backend",
  "version": "1.0.0",
  "description": "WhatsApp Ordering System Backend",
  "main": "src/app.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "db:seed": "node seed-admin.js",
    "db:migrate": "prisma migrate deploy",
    "test": "jest --verbose --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check": "node check-setup.js",
    "setup": "npm install && npx prisma generate && node check-setup.js",
    "reconcile": "node src/cli/reconcile.js",
    "reconcile:daily": "node -e \"require('./src/jobs/daily-reconciliation.job').runDailyReconciliation({save_report: true, send_alerts: true})\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
