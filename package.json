    "pino-pretty": "^13.1.3",
    "sharp": "^0.34.5",
    "twilio": "^5.11.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "localtunnel": "^1.8.3",
    "ngrok": "^5.0.0-beta.2",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.0.2",
    "prisma": "5.22.0",
    "supertest": "^7.2.2"
  }
}
