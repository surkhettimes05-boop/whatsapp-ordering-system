# ==========================================
# WhatsApp Ordering System - Environment Configuration Template
# ==========================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit .env file to repository!
# 
# Instructions:
# 1. Copy this file: cp .env.example .env
# 2. Edit .env with your actual configuration values
# 3. Never commit .env to git
# 4. Add .env to .gitignore (already done)
# ==========================================

# ==========================================
# SERVER CONFIGURATION
# ==========================================

# Node environment (development, staging, production)
NODE_ENV=development

# Server port
PORT=5000

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:3000

# ==========================================
# DATABASE
# ==========================================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Example: postgresql://user:pass@localhost:5432/whatsapp_db
DATABASE_URL=postgresql://user:password@localhost:5432/whatsapp_ordering

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================

# JWT secret key for token signing
# IMPORTANT: Generate a secure random key!
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Minimum 32 characters recommended
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# JWT token expiration time
JWT_EXPIRE=7d

# CORS allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ==========================================
# TWILIO (WhatsApp Integration)
# ==========================================

# Twilio account SID
# Get from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxx

# Twilio authentication token
# Get from: https://www.twilio.com/console
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# WhatsApp sender number (from your Twilio account)
# Format: +[country_code][phone_number]
# Example: +14155238886 (Twilio Sandbox) or your approved production number
TWILIO_WHATSAPP_FROM=+14155238886

# Verification token for WhatsApp webhooks
# IMPORTANT: Generate a secure random token!
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# This token is used to verify webhook requests from Twilio
WHATSAPP_VERIFY_TOKEN=your_webhook_verification_token_here

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================

# SMTP server configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Sender email address
EMAIL_FROM=noreply@yourcompany.com

# ==========================================
# PAYMENT GATEWAY (Optional)
# ==========================================

# Stripe API key (for payment processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# PayPal configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret

# ==========================================
# LOGGING & MONITORING
# ==========================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable file logging
LOG_TO_FILE=true

# Enable request logging
LOG_REQUESTS=true

# ==========================================
# RATE LIMITING & SECURITY
# ==========================================

# Rate limiting window (in milliseconds)
RATE_LIMIT_WINDOW=900000

# Rate limiting max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# FEATURE FLAGS
# ==========================================

# Enable credit system
ENABLE_CREDIT_SYSTEM=true

# Enable wholesaler system
ENABLE_WHOLESALER_SYSTEM=true

# Enable inventory management
ENABLE_INVENTORY=true

# ==========================================
# THIRD-PARTY SERVICES
# ==========================================

# Google Maps API key (for delivery routing)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# AWS S3 configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_bucket_name
AWS_S3_REGION=us-east-1

# ==========================================
# ADMINISTRATION
# ==========================================

# Admin email for system notifications
ADMIN_EMAIL=admin@yourcompany.com

# Slack webhook URL for critical alerts
NOTIFICATION_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# ==========================================
# DEVELOPMENT & DEBUGGING
# ==========================================

# Enable detailed error messages (development only)
DEBUG=whatsapp-ordering:*

# Seed database with sample data on startup
SEED_DB=false