# Server Configuration
PORT=5000
NODE_ENV=development
# domain.com (no https://)
DOMAIN=localhost

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:password@postgres:5432/whatsapp_ordering?schema=public"

# Redis (Queue & Caching)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your_jwt_strong_secret_key_here
JWT_EXPIRES_IN=30d

# Twilio (WhatsApp Integration)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+14155238886
TWILIO_WHATSAPP_NUMBER=+14155238886
# URL for callback webhooks (must be HTTPS)
WEBHOOK_URL=https://your-domain.com/api/v1/whatsapp/webhook

# Admin Setup
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=securepassword123

# Optional: Logging
LOG_LEVEL=info
